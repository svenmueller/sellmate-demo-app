include includes/head 

- if (product.images.length > 0)
	img.product(src="#{product.images[0].url}&size=300")
	- if (product.images.length > 1)
		each item in product.images
			img.product(src="#{item.url}&size=100")
- else
	No Image Available.
	
- if (product.price_varies)
	#{product.price_min} to #{product.price_max}
- else
	#{product.price_min}

p !{product.description}


each option, i in product.options
	div
		select
			option Select #{option.name}
			each variant in product.variants
				option #{variant.options[i]}

include includes/foot

